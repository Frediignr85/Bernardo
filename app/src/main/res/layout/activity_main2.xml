<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ismael.chatprogramator.Main2Activity"
    android:background="@drawable/fondo7"
    >


    <Button
        android:id="@+id/btn_fecha"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/boton7"
        android:onClick="onClick"
        android:text="Fecha"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_hora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btn_hora"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="356dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/boton7"
        android:onClick="onClick"
        android:text="Hora"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/tv_fecha"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="442dp"
        android:layout_marginEnd="81dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:shadowColor="#23819C"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/btn_fecha"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hora"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="81dp"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:shadowColor="#23819C"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/et_Telefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toEndOf="@+id/btn_hora" />

    <EditText
        android:id="@+id/et_Telefono"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:hint="NÂ° de Telefono"
        android:inputType="textPersonName|numberDecimal"
        android:shadowColor="#23819C"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hora" />

    <EditText
        android:id="@+id/et_Mensaje"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Mensaje"
        android:inputType="textPersonName"
        android:shadowColor="#23819C"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Nombre" />

    <Button
        android:id="@+id/btn_Guardar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/boton7"
        android:onClick="Guardar"
        android:text="Guardar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/et_Nombre"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nombre del Remitente"
        android:inputType="textPersonName"
        android:shadowColor="#23819C"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Telefono" />

</android.support.constraint.ConstraintLayout>
